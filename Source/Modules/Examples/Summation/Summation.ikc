<?xml version="1.0"?>

<group name="Summation" description="adds two inputs">

	<description type="text">
		Module that sums its two inputs element by element.
		Both inputs must have the same size.
	</description>

	<example description="A simple example">
		<module
			class="Summation"
			name="Summation"
		/>
	</example>

	<input name="INPUT1" description="The first input" />
	<input name="INPUT2" description="The second input" />

	<output name="OUTPUT" description="The output" />

	<module class="Summation" />

